{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": [
    "lib/**/*",
    "components/**/*",
    "app.tsx",
    "electron/**/*",
    "tools/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist", "release", "android", "www", "mobile"]
}

